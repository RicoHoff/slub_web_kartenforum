.ol-control {
  padding: 2px;

  &.ol-full-screen {
    right: 0.5em;
    top: 0.5em;
    border-radius: 0;
  }

  &.ol-zoom {
    left: 10px;
    top: 10px;
    border-radius: 0;
  }

  &.ol-zoom-extent {
    left: 10px;
    top: 70px;

    > button {
      background: url(data:image/svg+xml;base64,)
        no-repeat $secondaryColorMain;
      background-size: 22px 22px;
      text-indent: -50px;
    }
  }

  > button {
    background-color: $secondaryColorMain;
    border-radius: 0;
    width: 22px;
    height: 22px;

    &:hover {
      background-color: $secondaryColorDark;
    }
  }
}
